# Database connection string (PostgreSQL)
# For local development:
# DATABASE_URL=postgresql://user@localhost:5432/techphoto
# For Supabase (production):
DATABASE_URL=postgres://postgres.xxx:password@aws-xxx.supabase.com:6543/postgres

# Payload CMS secret (used to encrypt JWT tokens)
PAYLOAD_SECRET=your-secret-key-here

# Server URL (no trailing slash)
NEXT_PUBLIC_SERVER_URL=https://your-domain.vercel.app

# Vercel Blob Storage (for media files in production)
# Get this from Vercel Dashboard -> Storage -> Blob -> Create Store
BLOB_READ_WRITE_TOKEN=vercel_blob_xxx

# Secret used to authenticate cron jobs
CRON_SECRET=your-cron-secret

# Used to validate preview requests
PREVIEW_SECRET=your-preview-secret
